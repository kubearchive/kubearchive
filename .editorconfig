root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4
max_line_length = 120

[*.md]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[{*.yaml,*.yml,*.json}]
indent_style = space
indent_size = 2

[{*.go,go.mod,go.sum}]
indent_style = tab
